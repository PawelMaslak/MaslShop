@model Maslshop.Models.ViewModels.Roles.RoleFormViewModel
@{
    ViewBag.Title = @Model.Heading;
}
<div id="view-account">
    <h1>Admin Panel</h1>
    <hr/>
    <h2>Edit Role</h2>
    <hr />
    
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => Model.RoleId)

        <div class="form-group">
            @Html.LabelFor(m => m.RoleName, "Role Name")
            @Html.TextBoxFor(m => m.RoleName, new { @class = "form-control", placeholder = @Model.RoleName })
            @Html.ValidationMessageFor(m => m.RoleName, "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
    }
</div>

