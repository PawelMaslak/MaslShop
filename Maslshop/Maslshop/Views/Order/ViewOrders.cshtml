@model Maslshop.Models.ViewModels.Order.OrdersListViewModel

@{
    ViewBag.Title = Model.Heading;
}

<h2>@Model.Heading</h2>

@using (Html.BeginForm("SearchOrder", "Order"))
{
    if (Model.SearchTerm != null)
    {
        @Html.ActionLink("<<Powrót", "ViewOrders")
    }

    <div class="form-group">
        <div class="input-group" style="width: 300px">
            @Html.TextBoxFor(m => m.SearchTerm, new { @class = "form-control", placeholder = "Wyszukaj według numeru zamówienia etc." })
            <span class="input-group-addon">
                <i class="glyphicon glyphicon-search"></i>
            </span>
        </div>
    </div>
}

<div id="ProductsList">
    <table id="table" class="table table-striped table-bordered text-center">
        <thead>
            <tr class="active text-info">
                <th>Id</th>
                <th>Data dodania</th>
                <th>Nazwa użytkownika</th>
                <th>Imię i Nazwisko</th>
                <th>Wartość zamówienia</th>
                <th>Typ płatności</th>
                <th>Typ przesyłki</th>
                <th>Ilość zamówionych produktów</th>
                <th>Status</th>
                <th>Edycja</th>
            </tr>
        </thead>
        <tbody class="text-center">

            @foreach (var order in Model.Orders)
            {
                var statusList = Model.OrderStats.Select(x => new
                {
                    x.Id,
                    x.Status
                }).Where(x => x.Status != order.OrderStatusName).ToList();

                <tr>
                    <td>@order.OrderId</td>
                    <td>@($"{order.OrderDate:d}")</td>
                    <td>@order.UserName</td>
                    <td>@order.Name @order.Surname</td>
                    <td>@order.OrderTotal.ToString("C")</td>
                    <td>@order.PaymentTypeName</td>
                    <td>@order.DeliveryTypeName</td>
                    <td>@order.Quantity</td>
                    <td>
                        @order.OrderStatusName
                        @*@using (Html.BeginForm("UpdateOrderStatus", "Order", FormMethod.Post))
                        {
                            @Html.DropDownListFor(m => order.StatusId, new SelectList(statusList, "Id", "Status"), @order.OrderStatusName, new { @class = "form-control", onchange = "this.form.submit();" })
                        }*@
                    </td>
                    <td><a href="@Url.Action("EditOrder", "Order", new {orderId = order.OrderId})" class="btn btn-default glyphicon glyphicon-pencil" role="button"></a></td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary btn-lg">Zapisz</button>
</div>



