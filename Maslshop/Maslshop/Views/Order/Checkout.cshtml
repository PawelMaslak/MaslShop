<p>Twoje obecne dane adresowe</p>

<p>Imie: @Model.ThisUser.Name</p>
<p>Nazwisko: @Model.ThisUser.Surname</p>
<p>Adres: @Model.ThisUser.Address @Model.ThisUser.City @Model.ThisUser.PostCode</p>
<p>Adres email: @Model.ThisUser.Email</p>

@using (Html.BeginForm("Checkout", "Order", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.ValidationSummary("", new { @class = "text-danger" })

    var deliveryInfo = Model.Deliveries.Select(x => new
    {
        x.Id,
        Name = x.Name + " - " + x.Price.ToString("C")
    });

    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = @Model.ThisUser.Name  })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Surname, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Surname, new { @class = "form-control", placeholder = @Model.ThisUser.Surname })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Address, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Address, new { @class = "form-control", placeholder = @Model.ThisUser.Address })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.PostCode, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.PostCode, new { @class = "form-control", placeholder = @Model.ThisUser.PostCode })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.City, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.City, new { @class = "form-control", placeholder = @Model.ThisUser.City })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = @Model.ThisUser.Email })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DeliveryId, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.DeliveryId, new SelectList(deliveryInfo, "Id", "Name"), "", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.TermsAndConditionsAccepted, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.CheckBoxFor(m => m.TermsAndConditionsAccepted)
            @Html.Hidden(nameof(Model.IsTrue), "true")
        </div>
    </div>

    <button type="submit" class="btn btn-primary btn-lg">Dalej</button>
}

    <script>
        $("#toshipping_checkbox").on("click", function () {
            var ship = $(this).is(":checked");
            $("[id^='shipping_']").each(function () {
                var tmpID = this.id.split('shipping_')[1];
                $(this).val(ship ? $("#" + tmpID).val() : "");
            });
        });
    </script>