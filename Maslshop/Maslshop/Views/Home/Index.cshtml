        @foreach (var product in Model.Products)
        {
            <div class="col-md-3 col-sm-4 col-xs-6">
                <div class="medium-box category-panel">
                    <div class="image">
                        @if (product.Files != null && product.Files.Count > 0)
                        {
                            <img src="~/Content/Images/Thumbnails/@product.Files[0].FileName" alt="photo" title="One Ounce Gold Coins" class="center-block2 img-responsive" />

                        }
                        else
                        {
                            <img src="~/Content/Images/Thumbnails/no-pic.png" alt="photo" />
                        }
                    </div>
                    <div class="inner-box grey-background">
                        <p class="name">
                            <a href="one-ounce-gold-coins/">@product.Name</a>
                        </p>
                        <p class="stock-message">
                                @if (product.StockAmount > 0)
                                {
                                    <small>Produkt dostępny</small>
                                }
                                else
                                {
                                    <small>Niedługo dostawa</small>
                                }
                        </p>
                        <div class="bottom">
                            <p class="from" id="price-inc-vat-454">
                                <small>od</small> <span class="json">@product.Price.ToString("C")</span>
                            </p>
                            <a class="btn2 btn-primary center-block" href="one-ounce-gold-coins">Zobacz</a>
                        </div>
                    </div>
                </div>
            </div>
        }
