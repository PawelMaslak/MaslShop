@model Maslshop.Models.ViewModels.ProductsListViewModel

@{
    ViewBag.Title = Model.Heading;
}

<h2>@Model.Heading</h2>

<p><a href="@Url.Action("Add", "Product")" class="btn btn-primary" role="button">Dodaj produkt</a></p>

@using (Html.BeginForm("SearchProduct", "Product"))
{
    if (Model.SearchTerm != null)
    {
        @Html.ActionLink("<<Powrót", "Index")
    }

    <div class="form-group">
        <div class="input-group" style="width: 300px">
            @Html.TextBoxFor(m => m.SearchTerm, new { @class = "form-control", placeholder = "Wyszukaj według nazwy etc..." })
            <span class="input-group-addon">
                <i class="glyphicon glyphicon-search"></i>
            </span>
        </div>
    </div>
}

<div id="ProductsList">
    <table id="table" class="table table-striped table-bordered text-center">
        <thead>
            <tr class="active text-info">
                <th>Id</th>
                <th>Data dodania</th>
                <th>Nazwa</th>
                <th>Cena</th>
                <th>Dostępna Ilość</th>
                <th>Kategoria</th>
                <th>Zdjęcie</th>
                <th>Edytuj</th>
                <th>Usuń</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@($"{product.AddedDate:d}")</td>
                    <td>@product.Name</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>@product.StockAmount</td>
                    <td>@product.CategoryName</td>
                    @if (product.FileName != null)
                    {
                    <td>
                        <img src="~/Content/Images/Thumbnails/@product.FileName" alt="photo" />
                    </td>
                    }
                    else
                    {
                        <td>
                            <img src="~/Content/Images/Thumbnails/no-pic.png" alt="photo" />
                        </td>
                    }
                    <td><a href="@Url.Action("Edit", "Product", new { productId = product.Id })" class="btn btn-primary" role="button">Edytuj</a></td>
                    <td><a href="@Url.Action("Delete", "Product", new { productId = product.Id })" class="btn btn-primary" role="button">Usuń</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
