@model Maslshop.Models.ViewModels.Delivery.DeliveriesViewModel

@{
    ViewBag.Title = Model.Heading;
}

<h2>@Model.Heading</h2>

<p><a href="@Url.Action("AddDeliveryType", "Delivery")" class="btn btn-primary" role="button">Dodaj nowy typ przesyłki</a></p>

<table id="table" class="table table-striped table-bordered text-center">
    <thead>
        <tr class="active text-info">
            <th>Id</th>
            <th>Rodzaj przesyłki</th>
            <th>Cena przesyłki</th>
            <th>Edycja</th>
            <th>Usuń</th>
        </tr>
    </thead>
    <tbody class="text-center">
        @foreach (var delivery in Model.Deliveries)
        {
            <tr>
                <td>@delivery.Id</td>
                <td>@delivery.Name</td>
                <td>
                    @delivery.Price.ToString("C")
                </td>
                <td><a href="@Url.Action("EditDeliveryType", "Delivery", new {deliveryId = delivery.Id})" class="btn btn-primary" role="button">Edytuj</a></td>
                <td><a href="@Url.Action("RemoveDeliveryType", "Delivery", new {deliveryId = delivery.Id})" class="btn btn-primary" role="button">Usuń</a></td>
            </tr>
        }
    </tbody>
</table>